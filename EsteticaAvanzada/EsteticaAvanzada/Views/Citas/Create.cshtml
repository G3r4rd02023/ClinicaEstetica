@model EsteticaAvanzada.Data.Entidades.Cita
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/ModalLayout.cshtml";
}

<div class=" col-md-12">
    <div class=" card">
        <div class=" card-header text-center">
            <h5> Crear Cita</h5>
        </div>
        <div class=" card-body text-center">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-primary"></div>
                
                <div class="form-group">
                    <label></label>
                    <select asp-for="PacienteId" asp-items="Model.Pacientes" class="form-select"></select>
                    <span asp-validation-for="PacienteId" class="text-danger"></span>
                </div>
               
                <div class="form-group">
                    <label>Fecha </label>
                    <input asp-for="Fecha" type="datetime-local" class="form-control" placeholder="Fecha" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
               
                <div class="form-group">
                    <label></label>
                    <textarea asp-for="Titulo" class="form-control" placeholder="Titulo"></textarea>
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label></label>
                    <textarea asp-for="Descripcion" class="form-control" placeholder="Descripcion"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class=" card-footer ">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


