@model EsteticaAvanzada.Models.NutricionalViewModel
@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<div class=" col-md-12">
    <div class=" card">
        <div class=" card-header text-center">
            <h4>Historia nutricional</h4>
        </div>
        <div class=" card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type ="hidden" asp-for="Paciente" />
                <div class="form-group">
                    <label></label>
                    <select asp-for="PacienteId" asp-items="Model.Pacientes" class="form-select"></select>
                    <span asp-validation-for="PacienteId" class="text-danger"></span>
                </div>
                <div class=" form-group">
                    <label> Antecedentes personales patológicos: </label>
                    <textarea asp-for="AntecedentesPatologicos" class="form-control" ></textarea>
                    <span asp-validation-for="AntecedentesPatologicos" class="text-danger"></span>
                </div>
                <div class=" form-group">
                    <label> Medicamentos que consume: </label>
                    <textarea asp-for="Medicamentos" class="form-control" ></textarea>
                    <span asp-validation-for="Medicamentos" class="text-danger"></span>
                </div>
                <div class=" form-group">
                    <label> Antecedentes InmunoAlérgicos: </label>
                    <textarea asp-for="AntecedentesInmunoAlergicos" class="form-control"></textarea>
                    <span asp-validation-for="AntecedentesInmunoAlergicos" class="text-danger"></span>
                </div>
                <div class=" form-group">
                    <label> Procedimientos quirurgicos y esteticos: </label>
                    <textarea asp-for="Procedimientos" class="form-control"></textarea>
                    <span asp-validation-for="Procedimientos" class="text-danger"></span>
                </div>
                <div class=" form-group">
                    <label> Peso: </label>
                    <input asp-for="Peso" class="form-control" />
                    <span asp-validation-for="Peso" class="text-danger"></span>
                </div>
                <div class=" form-group">
                    <label> Talla: </label>
                    <input asp-for="Talla" class="form-control" />
                    <span asp-validation-for="Talla" class="text-danger"></span>
                </div>
                <div class=" form-group">
                    <label> IMC: </label>
                    <input asp-for="IMC" class="form-control" />
                    <span asp-validation-for="IMC" class="text-danger"></span>
                </div>
                <div class=" form-group">
                    <label> Diagnostico: </label>
                    <textarea asp-for="Diagnostico" class="form-control"></textarea>
                    <span asp-validation-for="Diagnostico" class="text-danger"></span>
                </div>
                <div class=" form-group">
                    <label> Plan de tratamiento: </label>
                    <textarea asp-for="PlanTratamiento" class="form-control"></textarea>
                    <span asp-validation-for="PlanTratamiento" class="text-danger"></span>
                </div>
                <hr />
                <div class="row">
                    <h5>Medidas corporales</h5>
                    <div class="col-md-8">
                        <div class="form-group">
                            <label for="CinturaInicio">Cintura:</label>
                            <div class="d-flex">
                                <input asp-for="MedidasCorporales!.CinturaInicio" placeholder="Inicio" class="form-control me-2" id="CinturaInicio" />
                                <input asp-for="MedidasCorporales!.CinturaMedio" placeholder="Medio" class="form-control me-2" id="CinturaMedio" />
                                <input asp-for="MedidasCorporales!.CinturaFinal" placeholder="Final" class="form-control" id="CinturaFinal" />
                            </div>
                        </div>                       
                        <div class="form-group">
                            <label for="CaderaInicio">Cadera:</label>
                            <div class="d-flex">
                                <input asp-for="MedidasCorporales!.CaderaInicio" placeholder="Inicio" class="form-control me-2" id="CaderaInicio" />
                                <input asp-for="MedidasCorporales!.CaderaMedio" placeholder="Medio" class="form-control me-2" id="CaderaMedio" />
                                <input asp-for="MedidasCorporales!.CaderaFinal" placeholder="Final" class="form-control" id="CaderaFinal" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="AbdomenInicio">Abdomen:</label>
                            <div class="d-flex">
                                <input asp-for="MedidasCorporales!.AbdomenInicio" placeholder="Inicio" class="form-control me-2" id="AbdomenInicio" />
                                <input asp-for="MedidasCorporales!.AbdomenMedio" placeholder="Medio" class="form-control me-2" id="AbdomenMedio" />
                                <input asp-for="MedidasCorporales!.AbdomenFinal" placeholder="Final" class="form-control" id="AbdomenFinal" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="BrazoDerInicio">Brazo Derecho:</label>
                            <div class="d-flex">
                                <input asp-for="MedidasCorporales!.BrazoDerInicio" placeholder="Inicio" class="form-control me-2" id="BrazoDerInicio" />
                                <input asp-for="MedidasCorporales!.BrazoDerMedio" placeholder="Medio" class="form-control me-2" id="BrazoDerMedio" />
                                <input asp-for="MedidasCorporales!.BrazoDerFinal" placeholder="Final" class="form-control" id="BrazoDerFinal" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="BrazoIzqInicio">Brazo Izquierdo:</label>
                            <div class=" d-flex">
                                <input asp-for="MedidasCorporales!.BrazoIzqInicio" placeholder="Inicio" class="form-control me-2" id="BrazoIzqInicio" />
                                <input asp-for="MedidasCorporales!.BrazoIzqMedio" placeholder="Medio" class="form-control me-2" id="BrazoIzqMedio" />
                                <input asp-for="MedidasCorporales!.BrazoIzqFinal" placeholder="Final" class="form-control" id="BrazoIzqFinal" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="MusloDerInicio">Muslo Derecho:</label>
                            <div class="d-flex">
                                <input asp-for="MedidasCorporales!.MusloDerInicio" placeholder="Inicio" class="form-control me-2" id="MusloDerInicio" />
                                <input asp-for="MedidasCorporales!.MusloDerMedio" placeholder="Medio" class="form-control me-2" id="MusloDerMedio" />
                                <input asp-for="MedidasCorporales!.MusloDerFinal" placeholder="Final" class="form-control" id="MusloDerFinal" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="MusloIzqInicio">Muslo Izquierdo:</label>
                            <div class=" d-flex">
                                <input asp-for="MedidasCorporales!.MusloIzqInicio" placeholder="Inicio" class="form-control me-2" id="MusloIzqInicio" />
                                <input asp-for="MedidasCorporales!.MusloIzqMedio" placeholder="Medio" class="form-control me-2" id="MusloIzqMedio" />
                                <input asp-for="MedidasCorporales!.MusloIzqFinal" placeholder="Final" class="form-control" id="MusloIzqFinal" />
                            </div>
                        </div>                      
                    </div>
                    <div class="col-md-4">
                         <img src="/images/medidas.png" style="width: 200px; height: 400px;" />
                    </div>
                </div>
                <hr />
                <h5>Sesiones programadas</h5>
                <div class=" row">
                    <div class=" col-md-6">
                        <div class=" form-group"><label>Sesion 1:</label></div>
                        <input asp-for="SesionesProgramadas!.Sesion1Fecha" class="form-control" type="datetime-local" />
