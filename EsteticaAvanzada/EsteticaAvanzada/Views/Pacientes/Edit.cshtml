@model EsteticaAvanzada.Data.Entidades.Paciente
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/ModalLayout.cshtml";
}

<div class=" col-md-12">
    <div class=" card">
        <div class=" card-header text-center">
            <h5> Editar Paciente</h5>
        </div>
        <div class=" card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Id" type="hidden"/>
                
                <div class="form-group">
                    <label></label>
                    <input asp-for="DNI" class="form-control" placeholder="Numero de identidad" />
                    <span asp-validation-for="DNI" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label></label>
                    <input asp-for="NombrePaciente" class="form-control" placeholder="Nombre Paciente" />
                    <span asp-validation-for="NombrePaciente" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label></label>
                    <input asp-for="Direccion" class="form-control" placeholder="Dirección" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <br />
                    <label>Seleccione su fecha de nacimiento : </label>
                    <input asp-for="FechaNacimiento" class="form-control" type="date" />
                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label></label>
                    <input asp-for="Telefono" class="form-control" placeholder="Telefono" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label></label>
                    <input asp-for="Correo" class="form-control" placeholder="Correo" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label></label>
                    <input asp-for="Profesion" class="form-control" placeholder="Profesión" />
                    <span asp-validation-for="Profesion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label></label>
                    <textarea asp-for="Contacto" class="form-control" placeholder="Contacto de emergencia"></textarea>
                    <span asp-validation-for="Contacto" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <br />
                    <label>Sexo</label>
                    <div>
                        <label>
                            <input asp-for="Sexo" type="radio" value="M" /> Masculino
                        </label>
                    </div>
                    <div>
                        <label>
                            <input asp-for="Sexo" type="radio" value="F" /> Femenino
                        </label>
                    </div>
                    <span asp-validation-for="Sexo" class="text-danger"></span>
                </div>

                <div class=" card-footer ">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="oi oi-check"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="oi oi-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
